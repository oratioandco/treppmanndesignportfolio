---
interface Props {
  title: string;
  description?: string;
  showBackButton?: boolean;
}

const { title, description = "Design Leadership - Human-centered organizations for human-centered products", showBackButton = false } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title} | Tobias Treppmann</title>
  </head>
  <body>
    {showBackButton && (
      <div class="back-button-container">
        <div class="container">
          <a href="/" class="back-button">‚Üê Back</a>
        </div>
      </div>
    )}

    <main>
      <slot />
    </main>

    <footer class="footer">
      <div class="container">
        <p>&copy; {new Date().getFullYear()} Tobias Treppmann. Berlin, Germany.</p>
      </div>
    </footer>
  </body>
</html>

<style is:global>
  @import '../styles/global.css';
</style>
